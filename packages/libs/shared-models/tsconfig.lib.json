{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "rootDir": "./src",  // Updated rootDir for clarity
    "baseUrl": "./", 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "../../shared-models/src/**/*.ts",
    "../../shared-services/src/**/*.ts"  // Ensure this path is correct
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
